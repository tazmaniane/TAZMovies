<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <!-- Set proper title size -->
    <item name="android:textSize">@dimen/dimen_font_size_toolbar</item>
    <item name="android:fontFamily">@font/font_primary</item>
    <item name="android:textAllCaps">false</item>
    <item name="titleMarginStart">0dp</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="titleTextColor">@color/colorPrimaryText</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="AppTheme.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <!-- Set proper title size -->
    <item name="android:textSize">@dimen/dimen_font_size_very_small</item>
    <item name="android:fontFamily">@font/font_primary</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="subtitleTextColor">@color/colorPrimaryText</item>
    <item name="android:singleLine">false</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="AppTheme.Toolbar.TitleWhite" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <!-- Set proper title size -->
    <item name="android:textSize">@dimen/dimen_font_size_toolbar</item>
    <item name="android:fontFamily">@font/font_primary</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="titleTextColor">@android:color/white</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="AppTheme.Toolbar.SubtitleWhite" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <!-- Set proper title size -->
    <item name="android:textSize">@dimen/dimen_font_size_very_small</item>
    <item name="android:layout_marginLeft">-9dp</item>
    <item name="android:layout_marginStart">-9dp</item>
    <item name="android:fontFamily">@font/font_primary</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="subtitleTextColor">@android:color/white</item>
    <item name="android:singleLine">false</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>
</resources>


