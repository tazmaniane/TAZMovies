<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_margin"
    android:paddingLeft="@dimen/dimen_margin"
    android:paddingEnd="@dimen/dimen_margin_half"
    android:paddingRight="@dimen/dimen_margin_half"
    android:paddingTop="@dimen/dimen_margin"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginHorizontal="@dimen/dimen_margin_half">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/font_primary_bold"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_font_size_normal_large" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/dimen_margin_half"
        android:layout_marginLeft="@dimen/dimen_margin_half"
        android:src="@drawable/ic_chevron_right"
        app:tint="@color/colorDivider" />

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/colorDivider"
      android:layout_marginTop="@dimen/dimen_margin"/>

</LinearLayout>