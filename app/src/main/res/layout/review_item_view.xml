<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_margin"
    android:paddingLeft="@dimen/dimen_margin"
    android:paddingEnd="@dimen/dimen_margin_half"
    android:paddingRight="@dimen/dimen_margin_half"
    android:paddingVertical="@dimen/dimen_margin_half"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_vertical"
      android:layout_marginHorizontal="@dimen/dimen_margin_half">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/font_primary_bold"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_font_size_normal_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

      <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:tint="#FFC107"
          app:srcCompat="@drawable/ic_star_black_24dp" />

      <TextView
          android:id="@+id/tv_rating"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:layout_marginLeft="2dp"
          android:text="0.0"
          android:fontFamily="@font/font_primary_bold"
          android:textColor="@android:color/white"
          android:textSize="@dimen/dimen_font_size_normal" />

      <TextView
          android:id="@+id/tv_create_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="end"
          android:layout_marginStart="2dp"
          android:layout_marginLeft="2dp"
          android:text="dd MMM yyyy"
          android:fontFamily="@font/font_primary"
          android:textColor="@android:color/white"
          android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/dimen_margin_half"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/font_primary"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_font_size_normal" />

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/colorDivider"
      android:layout_marginTop="@dimen/dimen_margin"/>

</LinearLayout>