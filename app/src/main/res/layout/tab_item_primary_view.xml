<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_margin_tab_item"
    android:paddingHorizontal="@dimen/dimen_margin_tab_item"
    android:background="@drawable/background_tab_item_primary"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal">

  <ImageView
      android:id="@+id/tab_item_imv"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginEnd="6dp"
      android:layout_marginRight="6dp"
      android:visibility="gone" />

  <TextView
      android:id="@+id/tab_item_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Tab Title"
      android:singleLine="true"
      android:gravity="center"
      android:textAllCaps="false"
      android:fontFamily="@font/font_primary"
      android:textColor="@color/text_tab_item_primary"
      android:textSize="@dimen/dimen_tab_font_size" />

</LinearLayout>